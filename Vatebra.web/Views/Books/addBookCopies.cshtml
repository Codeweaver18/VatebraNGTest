@model Vatebra.web.ViewModels.addBookCopiesViewModel

@{
    ViewData["Title"] = "addBookCopies";
    var id = int.Parse(ViewData["addBookCopiesId"].ToString());
}

<h1>Add More Copies to your Book</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <span class="text-success">
            @ViewData["addBookCopiesSuccess"]
        </span>
        <span class="text-danger">
            @ViewData["addBookCopiesError"]
        </span>
        <form asp-action="addBookCopies" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="yearPublished" class="control-label"></label>
                <input asp-for="yearPublished" class="form-control" />
                <span asp-validation-for="yearPublished" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bookAbstract" class="control-label"></label>
                <input asp-for="bookAbstract" class="form-control" />
                <span asp-validation-for="bookAbstract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="versionTitle" class="control-label"></label>
                <input asp-for="versionTitle" class="form-control" />
                <span asp-validation-for="versionTitle" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" name="bookId" id="bookId" value="@id" />

            </div>
            <div class="form-group">
                <input type="submit" value="Add Copy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to view Details", "viewBooksDetails", new { id =id })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
