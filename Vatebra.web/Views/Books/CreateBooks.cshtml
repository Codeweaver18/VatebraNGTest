@model Vatebra.web.ViewModels.BookViewModel
@using Vatebra.core.Services;
@{
    ViewData["Title"] = "CreateBooks";
}

<h1>CreateBooks</h1>

<h4>BookViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBooks" asp-antiforgery="true">
